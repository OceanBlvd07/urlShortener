<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/css/main.css" />
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
    
    <div class="navbar bg-base-100 shadow-sm">
        <div class="flex-1">
            <span class="text-xl font-bold">URL Shortener</span>
        </div>
        <div class="flex-none">
            <span class="mr-4">Hello, <%= userEmail %></span>
            <a href="/logout" class="btn btn-ghost btn-sm">Log Out</a>
        </div>
    </div>

    <div class="flex-1 flex items-center justify-center">
        <div class="w-full max-w-md p-6 bg-white rounded-2xl shadow-lg">
            <h1 class="text-3xl font-bold text-center mb-6">Dashboard</h1>
                <% if (locals.error) { %>
                    <div role="alert" class="alert alert-error flex items-center gap-2 mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0 stroke-current" fill="none" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <span><%=error%></span>
                    </div>
                <% } %>
            <!-- Form -->
            <form action="/shorten" method="POST" class="flex gap-2 mb-4">
                <input type="text" class="input input-bordered flex-1" placeholder="Type your link here" name="txtLink" required/>
                <button class="btn btn-primary">Shorten</button>
            </form>

            <!-- User URLs -->
            <h2 class="text-lg font-bold mb-2">Your links:</h2>
            <ul class="menu bg-base-100 rounded-box">
                <% urls.slice().reverse().forEach(url => { %>
                    <li>
                        <div class="flex justify-between">
                            <a href="<%= host + '/' + url.newLink %>" target="_blank" class="flex justify-between items-center">
                                <span><%= host + '/' + url.newLink %></span>
                            </a>
                            <a class="btn btn-error btn-sm" href="/delete/link/<%=url._id%>">Delete</a>
                        </div>
                    </li>
                <% }) %>
            </ul>




        </div>
    </div>

</body>
</html>
